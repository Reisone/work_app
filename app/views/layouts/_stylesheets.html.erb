<% if signed_in? %>
  <% if @user.style.nil? %>
      <%= stylesheet_link_tag "custom1.css", :media => 'screen' %>
    <% else %>
      <%= stylesheet_link_tag @user.style, :media => 'screen' %>
  <% end %>
<% else %>
  <%= stylesheet_link_tag "custom1.css", :media => 'screen' %>
<% end %>